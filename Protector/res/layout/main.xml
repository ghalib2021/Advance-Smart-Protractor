<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/protractor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pro1">
    </ImageView>

    
    

    <RelativeLayout	
        android:id="@+id/lowerscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/lower_screen"
        android:gravity="left" >

        <TextView
            android:id="@+id/textazimuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:text="Small Text"
         
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="20dp"
            android:layout_below="@+id/textazimuth"
            android:text="Small Text"
            
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textpitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Small Text"
            android:layout_below="@+id/textroll"
          
            android:textColor="#000000" />
    </RelativeLayout>

    <Button
        android:id="@+id/settingbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/settings" />

    <Button
        android:id="@+id/calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingbt"
        android:layout_alignLeft="@+id/settingbt"
        android:background="@drawable/calibration"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/plumb" />

    <RelativeLayout
        android:id="@+id/roundscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_screen1">

        <TextView
            android:id="@+id/angle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            
            android:textColor="#000000" />

        <ToggleButton
            android:id="@+id/on_off_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/angle1"
            android:background="@drawable/pause"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="123dp"
            />

        <TextView
            android:id="@+id/tvrad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/angle1"
            android:layout_toRightOf="@+id/angle1"
            android:textColor="#000000"
            android:textSize="15sp"
           />
        
    </RelativeLayout>
     <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8000764337105822/1662172998" />
</RelativeLayout>